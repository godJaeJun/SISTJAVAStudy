		//for문으로 별찍기
		for(int i=0;i<5;i++)
		{						//결과값이 5줄이므로 5번 반복해서 돌아야 한다. i=0~4까지 반복 총 5번
			for(int j=0;j<5;j++)					//공백과 별을 합쳐서 최대 5개까지 출력하므로 j도 0~4까지 반복 총 5번을 한다.
			{	
				System.out.print(j<(4-i)?" ":"*");	//j는 찍히는 것을 나타내는데 j가 4-i보다 작을 때는 공백 즉 처음줄에 4개의 공백을 찍도록 해주는 것 i가 커질수록 
													//공백이 줄어들기 때문이다.
			}
			System.out.println();					//줄바꿈을 실행 시켜준다.
		}

